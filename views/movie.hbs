<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{movie.link}}" alt="...">
                    <div class="caption">
                    <h3>{{movie.title}}</a></h3>
                    <p><b>Rating:</b> {{movie.rating}}/5
                    <input class="movieRating" name="movieRating" value="{{movie.rating}}" class="rating-loading"> 
                    </p>
                    <p><b>Genre:</b> {{movie.genre}}</p>
                    <p>{{movie.description}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                <h3>Rate <b>{{movie.title}}</b></h3>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addComment">
                    Rate
                </button>
                <br>
                <br>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Author</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Action</th>
                    </tr>
                    {{# each movie.comments}}
                    <tr>
                        <td><a href="../author/{{this.author}}">{{this.author}}</a></td>
                        <td><input class="movieRating" name="movieRating" value="{{this.rating}}" class="rating-loading"></td>
                        <td>{{this.comment}}</td>
                        <!-- Solution that works as well with much less headache in router,
                            but with longer link path
                            <a href="comment/delete/{../movie._id}}/{this._id}}">Delete</a>
                        -->
                        <td><a href="comment/delete/{{this._id}}">Delete</a></td>
                    </tr>
                    {{/each}}
                </table>
                <div class="modal fade" id="addComment" tabindex="-1" role="dialog">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Add new comment</h4>
                              </div>
                              <div class="modal-body">
                                <form action="comment/add" method="POST" id="addCommentForm">
                                    <div class="form-group">
                                      <input type="hidden" class="form-control" name="id" value="{{movie._id}}">
                                      <label for="title">Author</label>
                                      <input type="text" class="form-control" name="author" placeholder="Anonymous" value="Anonymous">
                                    </div>
                                    <div class="form-group">
                                      <label for="rating">Rating</label>
                                      <input name="rating" class="rating rating-loading" data-min="0" data-max="5" data-step="1" data-show-clear="false" data-show-caption="false">
                                    </div>
                                    <div class="form-group">
                                      <label for="genre">Comment</label>
                                      <input type="text" class="form-control" name="comment" placeholder="Comment" required>
                                    </div>
                                </form>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" form="addCommentForm">Save changes</button>

                              </div>
                            </div><!-- /.modal-content -->
                          </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>
</section>